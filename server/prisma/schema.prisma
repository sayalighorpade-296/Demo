datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  projects  Project[]
  roles     String[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Project {
  createdAt   DateTime  @default(now())
  description String?
  dueDate     DateTime?
  id          String    @id @default(cuid())
  name        String
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     String
  startDate   DateTime?
  tasks       Task[]
  updatedAt   DateTime  @updatedAt
}

model Task {
  assignedTo     String?
  createdAt      DateTime        @default(now())
  estimationDays Int?
  id             String          @id @default(cuid())
  project        Project?        @relation(fields: [projectId], references: [id])
  projectId      String?
  startDate      DateTime?
  status         EnumTaskStatus?
  title          String
  updatedAt      DateTime        @updatedAt
}

model Farm {
  createdAt            DateTime                      @default(now())
  farmType             EnumFarmFarmType?
  heightArea           Float?
  id                   String                        @id @default(cuid())
  lengthArea           Float?
  sunlightAvailability EnumFarmSunlightAvailability?
  updatedAt            DateTime                      @updatedAt
  widthArea            Float?
}

model FarmActivity {
  activityDate DateTime?
  createdAt    DateTime  @default(now())
  description  String?
  id           String    @id @default(cuid())
  title        String?
  updatedAt    DateTime  @updatedAt
}

enum EnumTaskStatus {
  New
  Pending
  Ongoing
  Done
}

enum EnumFarmFarmType {
  Terrace
  Farm
  Garden
}

enum EnumFarmSunlightAvailability {
  Low
  Medium
  High
}